{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:app": "pnpm --filter=@ribo/app dev",
    "dev:api": "pnpm --filter=@ribo/api dev",
    "build": "run-s build:api build:app",
    "build:app": "pnpm --filter=@ribo/app build",
    "build:api": "pnpm --filter=@ribo/api build",
    "lint": "oxlint --type-aware --fix",
    "r-init": "lefthook install",
    "postinstall": "pnpm build:api"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "lefthook": "^2.0.4",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "pinia": "^3.0.4",
    "sass": "^1.94.2",
    "tsdown": "^0.18.1",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.4",
    "zod": "^4.3.5"
  }
}
